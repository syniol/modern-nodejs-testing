  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/syniol/modern-nodejs-testing/issues"
  },
  "homepage": "https://github.com/syniol/modern-nodejs-testing#readme",
  "devDependencies": {
    "@types/node": "^22.7.5",
    "prettier": "^3.3.3",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}
